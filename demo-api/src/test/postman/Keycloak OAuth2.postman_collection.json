{
	"info": {
		"_postman_id": "40af193b-e8d5-4960-9811-393a2daafe42",
		"name": "Keycloak OAuth2",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Keycloak Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json();",
							"pm.globals.set(\"accessToken\", jsonData.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "client_id",
							"value": "demo_app",
							"type": "text"
						},
						{
							"key": "username",
							"value": "user01",
							"type": "text"
						},
						{
							"key": "password",
							"value": "pwd123",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "password",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{keycloakUrl}}/auth/realms/demo_realm/protocol/openid-connect/token",
					"host": [
						"{{keycloakUrl}}"
					],
					"path": [
						"auth",
						"realms",
						"demo_realm",
						"protocol",
						"openid-connect",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "Keycloak Userinfo",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{accessToken}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{keycloakUrl}}/auth/realms/demo_realm/protocol/openid-connect/userinfo",
					"host": [
						"{{keycloakUrl}}"
					],
					"path": [
						"auth",
						"realms",
						"demo_realm",
						"protocol",
						"openid-connect",
						"userinfo"
					]
				}
			},
			"response": []
		}
	]
}
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.globals.set(\"todoId\", jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"label\": \"todo {{$randomInt}}\",\n    \"description\": \"something {{$randomLoremWord}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/todos",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"todos"
					]
				}
			},
			"response": []
		},
		{
			"name": "Find Todo By Id",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Matching id in path\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.id).to.eql(pm.globals.get(\"todoId\"));",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
